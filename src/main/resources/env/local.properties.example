# Local Environment Configuration for Gateway
# Copy this file to local.properties and modify as needed

# Backend Service URL
BACKEND_SERVICE_URL=http://localhost:8080

# Frontend URL for CORS
PUBLIC_FRONTEND_URL=http://localhost:4321

# Gateway Configuration
# Gateway Port: 8082
# Gateway Access URL: http://localhost:8082/tymgateway
# Example: http://localhost:8082/tymgateway/tymb/people/get-all

# gRPC Client Configuration
GRPC_CLIENT_ENABLED=true
GRPC_BACKEND_HOST=localhost
GRPC_BACKEND_PORT=50051

# Redis Configuration (Optional - for distributed rate limiting)
# Uncomment the following lines if you need Redis for rate limiting
# REDIS_HOST=localhost
# REDIS_CUSTOM_PORT=6379
# REDIS_PASSWORD=
